<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lineWidthDialogGridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:columnCount="1"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:useDefaultMargins="true">

    <ImageView
        android:id="@+id/width_image_view"
        android:layout_height="@dimen/line_image_view_height"
        android:layout_gravity="fill_horizontal"
        android:contentDescription="@string/line_imageView_description"/>

    <SeekBar
        android:id="@+id/width_seek_bar"
        android:layout_gravity="fill_horizontal"
        android:max="50"/>
</GridLayout>