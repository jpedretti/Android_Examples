<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/colorDialogGridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:useDefaultMargins="true">

    <TextView
        android:id="@+id/alpha_text_view"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/label_alpha"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_gravity="end|center_vertical"/>

    <SeekBar
        android:id="@+id/alpha_seek_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_gravity="fill_horizontal"
        android:max="255"/>

    <TextView
        android:id="@+id/red_text_view"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/label_red"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_gravity="end|center_vertical"/>

    <SeekBar
        android:id="@+id/red_seek_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_gravity="fill_horizontal"
        android:max="255"/>

    <TextView
        android:id="@+id/green_text_view"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/label_green"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_gravity="end|center_vertical"/>

    <SeekBar
        android:id="@+id/green_seek_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_gravity="fill_horizontal"
        android:max="255"/>

    <TextView
        android:id="@+id/blue_text_view"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/label_blue"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_gravity="end|center_vertical"/>

    <SeekBar
        android:id="@+id/blue_seek_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_column="1"
        android:layout_row="3"
        android:layout_gravity="fill_horizontal"
        android:max="255"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/color_view_height"
        android:id="@+id/color_view"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"/>
</GridLayout>